{
	"name": "@kodekeep/hapi-json-api",
	"version": "0.1.2",
	"description": "An implementation of the JSON API specification for building APIs with hapi.js",
	"repository": "https://github.com/kodekeep/hapi-json-api",
	"license": "MPL-2.0",
	"author": "KodeKeep <hello@kodekeep.com>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "./node_modules/eslint/bin/eslint.js src --ext .ts --fix",
		"prepublishOnly": "yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": false,
		"collectCoverage": false,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"@hapi/boom": "^9.1.0",
		"@hapi/hapi": "^20.0.0",
		"@hapi/hoek": "^9.0.4",
		"@hapi/joi": "^17.1.1",
		"accepts": "^1.3.7",
		"ajv": "^6.12.4",
		"json-api-serializer": "^2.6.0",
		"lodash": "^4.17.20",
		"media-type": "^0.3.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/accepts": "^1.3.5",
		"@types/hapi__boom": "^9.0.1",
		"@types/hapi__hapi": "^20.0.0",
		"@types/hapi__hoek": "^9.0.1",
		"@types/hapi__joi": "^17.1.4",
		"@types/jest": "^26.0.10",
		"@types/lodash": "^4.14.160",
		"@types/node": "^14.6.1",
		"@types/prettier": "^2.1.0",
		"@types/rimraf": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.7.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-jest": "^23.20.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-simple-import-sort": "^5.0.3",
		"jest": "^26.4.2",
		"jest-extended": "^0.11.5",
		"prettier": "^2.1.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.3.0",
		"typescript": "^4.0.2"
	}
}
