{
    "name": "@konceiver/hapi-json-api",
    "version": "1.0.0",
    "description": "An implementation of the JSON API specification for building APIs with hapi.js",
    "repository": "https://github.com/konceiver/hapi-json-api",
    "license": "MIT",
    "author": "Konceiver Oy <info@konceiver.dev>",
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn clean && tsc",
        "build:watch": "yarn build -w",
        "clean": "rimraf .coverage dist tmp",
        "format": "yarn lint && yarn prettier",
        "lint": "./node_modules/eslint/bin/eslint.js src --ext .ts --fix",
        "prepublishOnly": "yarn build",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
        "test": "jest",
        "test:watch": "jest --watchAll"
    },
    "jest": {
        "bail": false,
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "<rootDir>/.coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "verbose": true
    },
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/hapi": "^20.0.3",
        "@hapi/hoek": "^9.1.0",
        "@hapi/joi": "^17.1.1",
        "accepts": "^1.3.7",
        "ajv": "^6.12.6",
        "json-api-serializer": "^2.6.0",
        "lodash": "^4.17.20",
        "media-type": "^0.3.1"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.8.0",
        "@types/accepts": "^1.3.5",
        "@types/hapi__boom": "^9.0.1",
        "@types/hapi__hapi": "^20.0.3",
        "@types/hapi__hoek": "^9.0.1",
        "@types/hapi__joi": "^17.1.6",
        "@types/jest": "^26.0.19",
        "@types/lodash": "^4.14.165",
        "@types/node": "^14.14.13",
        "@types/prettier": "^2.1.5",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "@yarnpkg/pnpify": "^2.4.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3",
        "typescript-language-server": "^0.4.0"
    }
}
